<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--<TextView
        android:id="@+id/tv_busstopname"
        android:text="원인재역 (6번 출구)"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:textStyle="bold"
        android:background="#2a2a4c"
        android:textSize="50px"
        android:textColor="#FFFFFF"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="19"
        >
        <TextView
            android:text="버스 번호"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_busnumber"
            android:text="552"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="90px"
            android:gravity="center"
            android:textColor="#2a2a4c"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:text="남은 버스 정류장 수"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_busstopnum"
            android:text="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="90px"
            android:gravity="center"
            android:textColor="#2a2a4c"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="20">
        <TextView
            android:text="도착까지..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_arrivetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="33dp"
                android:textStyle="bold"
                android:text="7"
                android:textSize="90px"
                android:textColor="#f52020"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:layout_gravity="bottom"
                android:textColor="#f52020"
                android:text="분 전..."/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>
</LinearLayout>